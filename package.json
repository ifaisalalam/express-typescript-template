{
  "name": "express-typescript-template",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "prebuild": "mkdirp dist",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^8.0.0",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "mkdirp": "^0.5.1",
    "morgan": "~1.9.1",
    "pug": "^2.0.4"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.1",
    "@types/debug": "^4.1.4",
    "@types/express": "^4.17.0",
    "@types/http-errors": "^1.6.1",
    "@types/mkdirp": "^0.5.2",
    "@types/morgan": "^1.7.35",
    "@types/node": "^12.7.3",
    "@types/pug": "^2.0.4",
    "nodemon": "^1.19.1",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "nodemonConfig": {
    "ignore": [
      "test/",
      "**/*.spec.ts",
      "docs/"
    ],
    "delay": "2500"
  }
}
